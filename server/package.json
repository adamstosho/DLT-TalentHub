{
  "name": "dlt-talenthub-server",
  "version": "1.0.0",
  "description": "Backend server for DLT TalentHub - connecting talents with job opportunities in the DLT Africa ecosystem",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node seed/seedData.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "keywords": [
    "dlt",
    "talenthub",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "authentication"
